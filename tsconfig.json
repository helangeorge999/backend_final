{
  "compilerOptions": {
    "target": "ES2020",           // Must be ES2020 or higher
    "module": "ESNext",           // ES module system
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
